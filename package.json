{
    "name": "localtvads-website",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "lint": "./node_modules/.bin/eslint --ext .vue .",
        "deploy": "node scripts/deploy.js --environment=production",
        "deploy-staging": "node scripts/deploy.js --environment=staging",
        "lint-fix": "vue-cli-service lint",
        "lint-style": "stylelint .",
        "staging": "vue-cli-service build --mode=staging"
    },
    "dependencies": {
        "axios": "^0.19.0",
        "bootstrap": "^4.3.1",
        "bootstrap-vue": "^2.15.0",
        "card": "^2.4.0",
        "core-js": "^2.6.5",
        "jest": "^24.9.0",
        "jquery": "^3.4.1",
        "jquery.payment": "^3.0.0",
        "lottie-vuejs": "^0.3.7",
        "lottie-web": "^5.5.9",
        "moment": "^2.24.0",
        "ramda": "^0.26.1",
        "register-service-worker": "^1.7.1",
        "socket.io-client": "^2.0.4",
        "v-scroll-lock": "^1.0.1",
        "vue": "^2.6.10",
        "vue-advanced-cropper": "^0.12.5",
        "vue-agile": "^1.0.11",
        "vue-analytics": "^5.22.1",
        "vue-carousel": "^0.18.0",
        "vue-cookies": "^1.5.13",
        "vue-flatpickr-component": "^8.1.3",
        "vue-lottie": "^0.2.1",
        "vue-multiselect": "^2.1.6",
        "vue-router": "^3.1.3",
        "vue-sweetalert2": "^2.1.1",
        "vue-tel-input": "^4.0.0",
        "vue-upload-component": "^2.8.20",
        "vuescroll": "^4.16.0",
        "vuex": "^3.1.1"
    },
    "devDependencies": {
        "@babel/plugin-syntax-dynamic-import": "^7.2.0",
        "@e9ine/eslint-config-vue": "0.0.9",
        "@e9ine/eslint-config-vue-style": "0.0.9-a",
        "@vue/cli-plugin-babel": "^3.11.0",
        "@vue/cli-plugin-eslint": "^3.11.0",
        "@vue/cli-service": "^3.11.0",
        "@vue/eslint-plugin": "^4.2.0",
        "babel-eslint": "^10.0.1",
        "chalk": "^2.4.2",
        "compression-webpack-plugin": "^4.0.0",
        "eslint": "^5.16.0",
        "eslint-plugin-vue": "^5.0.0",
        "lint-staged": "^9.4.2",
        "node-sass": "^4.12.0",
        "node-ssh": "^8.0.0",
        "path": "^0.12.7",
        "sass-loader": "^8.0.0",
        "vue-template-compiler": "^2.6.10",
        "yorkie": "^2.0.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "browser": true
        },
        "globals": {
            "Stripe": false,
            "$": false,
            "FB": false
        },
        "extends": [
            "@e9ine/eslint-config-vue"
        ],
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "prettier": {
        "semi": true,
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 1300,
        "jsxBracketSameLine": true
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions"
    ],
    "gitHooks": {
        "pre-commit": "lint-staged",
        "commit-msg": "node scripts/verifyCommit.js"
    },
    "lint-staged": {
        "*.js": [
            "vue-cli-service lint",
            "git add"
        ],
        "*.vue": [
            "vue-cli-service lint",
            "git add"
        ],
        "config.js": [
            "node scripts/verifyUntrackable.js"
        ]
    },
    "stylelint": {
        "extends": "@e9ine/eslint-config-vue-style"
    }
}
